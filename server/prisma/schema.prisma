generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id                 BigInt       @id      @default(sequence())
  name               String
  email              String       @unique
  password           String
  lstLogin           DateTime?
  registrationTime   DateTime     @default(now())
  status             String       @default("active")
}
